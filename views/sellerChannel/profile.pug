              .form__field
                lable.form__label T&ecirc;n shop
                input.form-profile__input(name='shopName' value = user ? user.shopName : '')
              .form__field
                lable.form__label Địa Chỉ
                input.form-profile__input(name='address' value = user ? user.address : '')
              input.btn.btn-primary.profile__info-btn(type='submit', value='Lưu')
          .col.l-1
            .form__separate
          .col.l-3
            .profile__avatar
              img.profile__avatar-img(src=userAvatar, alt='')
              input.profile__avatar-file(type='file' name='avatar')
